<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen"
        android:background="#00A0E9">

    <TextView android:text="American Sign Language:" android:layout_width="wrap_content"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView android:text="Pocket Dictionary" android:layout_width="wrap_content"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:text="Search By Category"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/button1"
        android:background="@drawable/csign"
        android:textColor="#ffffab27"
        android:onClick="searchCategory"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:drawable/ic_menu_search"
        android:text="Search By Word"
        android:textSize="12sp"
        android:textStyle="bold"
        android:id="@+id/button2"
        android:onClick="searchWord"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:text="Training Game"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/tsign"
        android:textColor="#ffffab27"
        android:onClick="trainingGame" />

    <Button
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:text="Learn More About ASL"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/button4"
        android:onClick="learnMore"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/lsign"
        android:textColor="#ffffab27" />


</RelativeLayout>
