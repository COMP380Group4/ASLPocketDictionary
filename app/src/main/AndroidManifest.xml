<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp380.group4.com.aslpocketdictionary" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dictionary"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchByWord"
            android:label="@string/title_activity_search_by_word"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".LearnMoreASL"
            android:label="@string/title_activity_learn_more_asl"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="comp380.group4.com.aslpocketdictionary.TrainingGame"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="comp380.group4.com.aslpocketdictionary.TrainingGameResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
        <activity
            android:name=".SearchByCategory"
            android:label="@string/title_activity_search_by_category"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
